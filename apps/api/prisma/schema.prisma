  invoiceId        String   @map("invoice_id")
  currency         String   @default("USD")
  grossAmount      Decimal  @map("gross_amount") @db.Decimal(12, 2)
  commissionAmount Decimal  @map("commission_amount") @db.Decimal(12, 2)
  partnerNet       Decimal  @map("partner_net") @db.Decimal(12, 2)
  createdAt        DateTime @default(now()) @map("created_at")

  partner PartnerAccount @relation(fields: [partnerId], references: [id], onDelete: Cascade)

