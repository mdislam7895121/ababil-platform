  @@index([partnerId])
  @@index([createdAt])
  @@map("partner_earnings")
}

model PartnerPayout {
  id            String    @id @default(uuid())
  partnerId     String    @map("partner_id")
  currency      String    @default("USD")
  amount        Decimal   @db.Decimal(12, 2)
  status        String    @default("owed") // owed|approved|paid
  payoutMethod  String?   @map("payout_method") // bank|bkash|stripe|paypal
  payoutDetails Json?     @map("payout_details")
  approvedAt    DateTime? @map("approved_at")
  paidAt        DateTime? @map("paid_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  partner PartnerAccount @relation(fields: [partnerId], references: [id], onDelete: Cascade)

  @@index([partnerId])
  @@index([status])
  @@map("partner_payouts")
}

