generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Tenant {
  id              String    @id @default(uuid())
  name            String
  slug            String    @unique
  plan            String    @default("free")
  settings        Json      @default("{}")
  language        String    @default("en")
  languages       String[]  @default(["en"])
  resellerId      String?   @map("reseller_id")
  deletedAt       DateTime? @map("deleted_at")
  deleteToken     String?   @map("delete_token")
  deleteExpiresAt DateTime? @map("delete_expires_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  reseller         Reseller?         @relation(fields: [resellerId], references: [id], onDelete: SetNull)
  memberships      Membership[]
  apiKeys          ApiKey[]
  moduleFlags      ModuleFlag[]
  connectorConfigs ConnectorConfig[]
  auditLogs        AuditLog[]
  aiUsage          AiUsage[]
  aiCache          AiCache[]
  builderRequests  BuilderRequest[]
  blueprints       Blueprint[]
  buildRuns        BuildRun[]
  deployConfigs    DeployConfig[]
  deployRuns       DeployRun[]
  checklistItems   ChecklistItem[]
  previewSessions  PreviewSession[]
  setupSteps       SetupStep[]
  healthStatus     HealthStatus?
  subscription     Subscription?
  manualPayments   ManualPayment[]
  invoices         Invoice[]
  exportJobs       ExportJob[]
  backupSnapshots  BackupSnapshot[]

  @@map("tenants")
}

model User {
  id           String   @id @default(uuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  name         String
  avatarUrl    String?  @map("avatar_url")
  status       String   @default("active")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  memberships      Membership[]
  auditLogs        AuditLog[]
  aiUsage          AiUsage[]
  builderRequests  BuilderRequest[]
  approvedPayments ManualPayment[]
  ownedResellers   Reseller[]

  @@map("users")
}

model Membership {
  id        String   @id @default(uuid())
  tenantId  String   @map("tenant_id")
  userId    String   @map("user_id")
  role      String   @default("member")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([tenantId, userId])
  @@map("memberships")
}

model ApiKey {
  id           String    @id @default(uuid())
  tenantId     String    @map("tenant_id")
  name         String
  keyHash      String    @map("key_hash")
  keyPrefix    String    @map("key_prefix")
  scopes       String[]  @default([])
  lastUsedAt   DateTime? @map("last_used_at")
  expiresAt    DateTime? @map("expires_at")
  createdAt    DateTime  @default(now()) @map("created_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("api_keys")
}

model ModuleFlag {
  id        String   @id @default(uuid())
  tenantId  String   @map("tenant_id")
  key       String
  enabled   Boolean  @default(false)
  config    Json?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("module_flags")
}

model ConnectorConfig {
  id              String   @id @default(uuid())
  tenantId        String   @map("tenant_id")
  connectorKey    String   @map("connector_key")
  enabled         Boolean  @default(false)
  configEncrypted String?  @map("config_encrypted")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, connectorKey])
  @@map("connector_configs")
}

model AuditLog {
  id          String   @id @default(uuid())
  tenantId    String   @map("tenant_id")
  actorUserId String?  @map("actor_user_id")
  action      String
  entityType  String   @map("entity_type")
  entityId    String?  @map("entity_id")
  metadata    Json?
  createdAt   DateTime @default(now()) @map("created_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  actor  User?  @relation(fields: [actorUserId], references: [id], onDelete: SetNull)

  @@map("audit_logs")
}

model AiUsage {
  id            String   @id @default(uuid())
  tenantId      String   @map("tenant_id")
  userId        String   @map("user_id")
  model         String
  inputTokens   Int      @default(0) @map("input_tokens")
  outputTokens  Int      @default(0) @map("output_tokens")
  estimatedCost Decimal  @default(0) @map("estimated_cost") @db.Decimal(10, 6)
  createdAt     DateTime @default(now()) @map("created_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("ai_usage")
}

model AiCache {
  id          String   @id @default(uuid())
  tenantId    String   @map("tenant_id")
  promptHash  String   @map("prompt_hash")
  response    String
  model       String
  expiresAt   DateTime @map("expires_at")
  createdAt   DateTime @default(now()) @map("created_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, promptHash])
  @@map("ai_cache")
}

model BuilderRequest {
  id                   String    @id @default(uuid())
  tenantId             String    @map("tenant_id")
  userId               String    @map("user_id")
  promptText           String    @map("prompt_text")
  normalizedPromptHash String    @map("normalized_prompt_hash")
  status               String    @default("draft") // draft|approved|building|done|failed
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt @map("updated_at")

  tenant     Tenant      @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  user       User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  blueprints Blueprint[]
  buildRuns  BuildRun[]

  @@map("builder_requests")
}

model Blueprint {
  id               String   @id @default(uuid())
  tenantId         String   @map("tenant_id")
  builderRequestId String   @map("builder_request_id")
  templateKey      String   @map("template_key")
  blueprintJson    Json     @map("blueprint_json")
  summary          String
  createdAt        DateTime @default(now()) @map("created_at")

  tenant         Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  builderRequest BuilderRequest @relation(fields: [builderRequestId], references: [id], onDelete: Cascade)

  @@map("blueprints")
}

model BuildRun {
  id               String    @id @default(uuid())
  tenantId         String    @map("tenant_id")
  builderRequestId String    @map("builder_request_id")
  status           String    @default("pending") // pending|running|done|failed
  startedAt        DateTime? @map("started_at")
  finishedAt       DateTime? @map("finished_at")
  outputJson       Json?     @map("output_json")
  errorText        String?   @map("error_text")
  createdAt        DateTime  @default(now()) @map("created_at")

  tenant         Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  builderRequest BuilderRequest @relation(fields: [builderRequestId], references: [id], onDelete: Cascade)

  @@map("build_runs")
}

model DeployConfig {
  id                 String   @id @default(uuid())
  tenantId           String   @unique @map("tenant_id")
  provider           String   @default("REPLIT") // REPLIT|RENDER|RAILWAY|FLY|DOCKER
  appUrl             String?  @map("app_url")
  status             String   @default("draft") // draft|configured|live
  dbUrlEncrypted     String?  @map("db_url_encrypted")
  jwtSecretEncrypted String?  @map("jwt_secret_encrypted")
  encryptionKeyRef   String?  @map("encryption_key_ref") // never store actual key
  optionalJson       Json?    @map("optional_json")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  tenant     Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  deployRuns DeployRun[]

  @@map("deploy_configs")
}

model DeployRun {
  id             String    @id @default(uuid())
  tenantId       String    @map("tenant_id")
  deployConfigId String    @map("deploy_config_id")
  status         String    @default("started") // started|passed|failed
  startedAt      DateTime  @default(now()) @map("started_at")
  finishedAt     DateTime? @map("finished_at")
  resultsJson    Json?     @map("results_json")
  errorText      String?   @map("error_text")
  createdAt      DateTime  @default(now()) @map("created_at")

  tenant       Tenant       @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  deployConfig DeployConfig @relation(fields: [deployConfigId], references: [id], onDelete: Cascade)

  @@map("deploy_runs")
}

model ChecklistItem {
  id        String   @id @default(uuid())
  tenantId  String   @map("tenant_id")
  key       String
  label     String
  completed Boolean  @default(false)
  category  String   @default("required") // required|optional
  sortOrder Int      @default(0) @map("sort_order")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("checklist_items")
}

model PreviewSession {
  id        String   @id @default(uuid())
  tenantId  String   @map("tenant_id")
  role      String   @default("admin") // admin|staff|customer
  token     String   @unique
  expiresAt DateTime @map("expires_at")
  revoked   Boolean  @default(false)
  revokedAt DateTime? @map("revoked_at")
  createdAt DateTime @default(now()) @map("created_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("preview_sessions")
}

model IndustryPreset {
  id          String   @id @default(uuid())
  templateKey String   @map("template_key")
  presetKey   String   @map("preset_key")
  name        String
  description String
  configJson  Json     @map("config_json")
  createdAt   DateTime @default(now()) @map("created_at")

  @@unique([templateKey, presetKey])
  @@map("industry_presets")
}

model SetupStep {
  id            String   @id @default(uuid())
  tenantId      String   @map("tenant_id")
  key           String
  status        String   @default("pending")
  message       String?
  lastCheckedAt DateTime? @map("last_checked_at")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@unique([tenantId, key])
  @@map("setup_steps")
}

model HealthStatus {
  id        String   @id @default(uuid())
  tenantId  String   @unique @map("tenant_id")
  status    String   @default("green")
  message   String?
  issues    Json     @default("[]")
  updatedAt DateTime @updatedAt @map("updated_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("health_status")
}

model Subscription {
  id                   String    @id @default(uuid())
  tenantId             String    @unique @map("tenant_id")
  stripeCustomerId     String?   @unique @map("stripe_customer_id")
  stripeSubscriptionId String?   @unique @map("stripe_subscription_id")
  plan                 String    @default("free") // free|pro|business
  status               String    @default("inactive") // inactive|active|past_due|canceled
  liveAppsLimit        Int       @default(0) @map("live_apps_limit")
  liveAppsUsed         Int       @default(0) @map("live_apps_used")
  currentPeriodStart   DateTime? @map("current_period_start")
  currentPeriodEnd     DateTime? @map("current_period_end")
  canceledAt           DateTime? @map("canceled_at")
  createdAt            DateTime  @default(now()) @map("created_at")
  updatedAt            DateTime  @updatedAt @map("updated_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@map("subscriptions")
}

model ManualPayment {
  id             String    @id @default(uuid())
  tenantId       String    @map("tenant_id")
  amount         Decimal   @db.Decimal(10, 2)
  currency       String    @default("BDT")
  method         String    // bkash|nagad|rocket|bank|cash
  transactionRef String    @map("transaction_ref")
  proofImageUrl  String?   @map("proof_image_url")
  plan           String    @default("pro") // pro|business
  status         String    @default("pending") // pending|approved|rejected
  rejectionNote  String?   @map("rejection_note")
  createdAt      DateTime  @default(now()) @map("created_at")
  approvedAt     DateTime? @map("approved_at")
  approvedById   String?   @map("approved_by_id")

  tenant     Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  approvedBy User?  @relation(fields: [approvedById], references: [id], onDelete: SetNull)
  invoices   Invoice[]

  @@map("manual_payments")
}

model Invoice {
  id                 String   @id @default(uuid())
  tenantId           String   @map("tenant_id")
  subscriptionPlan   String   @map("subscription_plan") // pro|business
  amount             Decimal  @db.Decimal(10, 2)
  currency           String   @default("USD")
  paymentType        String   @map("payment_type") // stripe|manual
  paymentId          String?  @map("payment_id") // stripeSessionId or manualPaymentId
  status             String   @default("pending") // pending|paid|rejected
  resellerId         String?  @map("reseller_id")
  resellerCommission Decimal? @map("reseller_commission") @db.Decimal(10, 2)
  platformRevenue    Decimal? @map("platform_revenue") @db.Decimal(10, 2)
  issuedAt           DateTime @default(now()) @map("issued_at")
  paidAt             DateTime? @map("paid_at")
  createdAt          DateTime @default(now()) @map("created_at")

  tenant        Tenant         @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  manualPayment ManualPayment? @relation(fields: [paymentId], references: [id], onDelete: SetNull)
  reseller      Reseller?      @relation(fields: [resellerId], references: [id], onDelete: SetNull)

  @@map("invoices")
}

model TranslationCache {
  id          String   @id @default(uuid())
  lang        String
  key         String
  translation Json
  generatedAt DateTime @default(now()) @map("generated_at")
  expiresAt   DateTime @map("expires_at")
  createdAt   DateTime @default(now()) @map("created_at")

  @@unique([lang, key])
  @@map("translation_cache")
}

model Reseller {
  id              String   @id @default(uuid())
  name            String
  slug            String   @unique
  ownerUserId     String   @map("owner_user_id")
  logoUrl         String?  @map("logo_url")
  primaryColor    String?  @map("primary_color") @default("#3B82F6")
  secondaryColor  String?  @map("secondary_color")
  domain          String?  @unique
  subdomain       String?  @unique
  showPoweredBy   Boolean  @default(true) @map("show_powered_by")
  commissionType  String   @default("percentage") @map("commission_type") // fixed|percentage
  commissionValue Decimal  @default(20) @map("commission_value") @db.Decimal(10, 2)
  status          String   @default("active") // active|suspended|pending
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  owner    User      @relation(fields: [ownerUserId], references: [id], onDelete: Cascade)
  tenants  Tenant[]
  invoices Invoice[]

  @@map("resellers")
}

model ResellerStatement {
  id           String   @id @default(uuid())
  resellerId   String   @map("reseller_id")
  periodStart  DateTime @map("period_start")
  periodEnd    DateTime @map("period_end")
  totalRevenue Decimal  @map("total_revenue") @db.Decimal(10, 2)
  commission   Decimal  @db.Decimal(10, 2)
  invoiceCount Int      @default(0) @map("invoice_count")
  status       String   @default("pending") // pending|paid
  paidAt       DateTime? @map("paid_at")
  createdAt    DateTime @default(now()) @map("created_at")

  @@unique([resellerId, periodStart])
  @@map("reseller_statements")
}

model JobRun {
  id        String   @id @default(uuid())
  name      String
  status    String   // success|failed
  startedAt DateTime @map("started_at")
  endedAt   DateTime? @map("ended_at")
  details   Json     @default("{}")
  createdAt DateTime @default(now()) @map("created_at")

  @@index([name])
  @@index([createdAt])
  @@map("job_runs")
}

model ExportJob {
  id           String    @id @default(uuid())
  tenantId     String    @map("tenant_id")
  status       String    @default("pending") // pending|processing|ready|failed|expired
  format       String    @default("zip") // zip|json
  filePath     String?   @map("file_path")
  fileSize     Int?      @map("file_size")
  errorMessage String?   @map("error_message")
  expiresAt    DateTime? @map("expires_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@index([status])
  @@map("export_jobs")
}

model BackupSnapshot {
  id        String   @id @default(uuid())
  tenantId  String   @map("tenant_id")
  type      String   @default("manual") // manual|scheduled
  counts    Json     @default("{}") // { users: 10, memberships: 5, ... }
  metadata  Json     @default("{}")
  createdAt DateTime @default(now()) @map("created_at")

  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  @@index([tenantId])
  @@map("backup_snapshots")
}
